{
    "extends": "next/core-web-vitals",
    "ignorePatterns": [
        ".next/",
        "node_modules/",
        "public/",
        "out/",
        "dist/"
    ],
    "rules": {
        "@typescript-eslint/no-explicit-any": "error",
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "@typescript-eslint/no-require-imports": "off",
        "prefer-const": "warn",
        "react/no-unescaped-entities": "warn",
        "no-console": "warn"
    }
}